@{
    ViewData["Title"] = "Tính Điểm Tổng Kết";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Index" asp-controller="Score" method="post">
    <div class="mb-3">
        <label>Điểm A:</label>
        <input type="number"  name="A" required />
    </div>

    <div class="mb-3">
        <label>Điểm B:</label>
        <input type="number"  name="B" required />
    </div>

    <div class="mb-3">
        <label>Điểm C:</label>
        <input type="number"  name="C" required />
    </div>

    <button type="submit">Tính Điểm</button>
</form>

@if (ViewBag.TotalScore != null)
{
    <div class="alert mt-3">
        <strong>Điểm Tổng Kết:</strong> @ViewBag.TotalScore <br />
        <strong>Xếp Loại:</strong> @ViewBag.Grade
    </div>
}